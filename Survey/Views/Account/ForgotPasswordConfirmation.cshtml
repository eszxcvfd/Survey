@{
    ViewData["Title"] = "Password Reset Email Sent";
}

<section class="auth-card card-surface">
    <div style="text-align: center; padding: 24px 0;">
        <span class="material-symbols-outlined" 
              style="font-size: 64px; color: var(--md-sys-color-primary); margin-bottom: 16px;">
            mark_email_read
        </span>
    </div>
    
    <h2 class="md-typescale-headline-medium" style="text-align: center;">Check Your Email</h2>
    
    <p class="md-typescale-body-medium" style="margin: 24px 0; color: var(--md-sys-color-on-surface-variant); text-align: center;">
        If an account exists with the email you provided, you will receive a password reset link shortly.
    </p>
    
    <div style="padding: 16px; margin: 24px 0; background-color: var(--md-sys-color-surface-variant); border-radius: 8px;">
        <p class="md-typescale-body-small" style="margin: 0; color: var(--md-sys-color-on-surface-variant);">
            <strong>Important:</strong>
        </p>
        <ul class="md-typescale-body-small" style="margin: 8px 0 0 0; padding-left: 20px; color: var(--md-sys-color-on-surface-variant);">
            <li>The reset link will expire in 1 hour</li>
            <li>Check your spam folder if you don't see the email</li>
            <li>You can request a new link if needed</li>
        </ul>
    </div>
    
    <div class="form-actions" style="margin-top: 32px;">
        <md-filled-button type="button" onclick="window.location.href='@Url.Action("Login","Account")'">
            Back to Login
        </md-filled-button>
        <md-text-button type="button" onclick="window.location.href='@Url.Action("ForgotPassword","Account")'">
            Resend Email
        </md-text-button>
    </div>
</section>
