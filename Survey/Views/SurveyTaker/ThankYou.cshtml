@model SurveyCompletedViewModel
@{
    ViewData["Title"] = "Thank You";
}

<div style="min-height: 100vh; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); display: flex; align-items: center; justify-content: center; padding: 24px;">
    <div class="card-surface" style="max-width: 600px; width: 100%; padding: 60px 40px; border-radius: 24px; box-shadow: 0 20px 60px rgba(0,0,0,0.3); text-align: center;">
        
        <!-- Success Icon -->
        <div style="margin-bottom: 32px; animation: scaleIn 0.5s ease-out;">
            <div style="width: 120px; height: 120px; margin: 0 auto; background: linear-gradient(135deg, #10b981, #059669); border-radius: 50%; display: flex; align-items: center; justify-content: center; box-shadow: 0 8px 24px rgba(16, 185, 129, 0.3);">
                <span class="material-symbols-outlined" style="font-size: 72px; color: white;">check_circle</span>
            </div>
        </div>

        <!-- Thank You Message -->
        <h1 class="md-typescale-headline-large" style="margin-bottom: 16px;">Thank You!</h1>
        <p class="md-typescale-body-large" style="color: var(--md-sys-color-on-surface-variant); margin-bottom: 32px;">
            Your response to <strong>@Model.SurveyTitle</strong> has been recorded successfully.
        </p>

        <!-- Response Details -->
        <div style="padding: 24px; background-color: var(--md-sys-color-surface-variant); border-radius: 12px; margin-bottom: 32px;">
            <div style="display: flex; align-items: center; justify-content: center; gap: 8px; margin-bottom: 8px;">
                <span class="material-symbols-outlined" style="font-size: 20px; color: var(--md-sys-color-on-surface-variant);">schedule</span>
                <span class="md-typescale-body-medium">Submitted at @Model.CompletedAt.ToLocalTime().ToString("MMM dd, yyyy hh:mm tt")</span>
            </div>
            <div style="display: flex; align-items: center; justify-content: center; gap: 8px;">
                <span class="material-symbols-outlined" style="font-size: 20px; color: var(--md-sys-color-on-surface-variant);">fingerprint</span>
                <span class="md-typescale-body-small" style="color: var(--md-sys-color-on-surface-variant);">Response ID: @Model.ResponseId.ToString().Substring(0, 8)</span>
            </div>
        </div>

        <!-- Back to Home Button -->
        <md-filled-button onclick="window.location.href='@Url.Action("Index", "Home")'" style="min-width: 150px;">
            <md-icon slot="icon">home</md-icon>
            Back to Home
        </md-filled-button>
    </div>
</div>

<style>
    @@keyframes scaleIn {
        from {
            transform: scale(0);
            opacity: 0;
        }
        to {
            transform: scale(1);
            opacity: 1;
        }
    }
</style>