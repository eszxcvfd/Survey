<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Survey</title>

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/material-fixes.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dark-theme.css" asp-append-version="true" />

    <!-- Import map + Material init moved to static files -->
    <script type="module" src="~/js/material-init.js" asp-append-version="true"></script>
</head>
<body>
    @{
        var userId = Context.Session.GetString("UserId");
        var isLoggedIn = !string.IsNullOrEmpty(userId);
        var userFullName = Context.Session.GetString("UserFullName") ?? "User";
        var userAvatar = Context.Session.GetString("UserAvatar");
        var userInitials = GetUserInitials(userFullName);
        
        // Lấy controller và action hiện tại
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    }

    <!-- Navigation Drawer -->
    <aside class="navigation-drawer">
        <div class="drawer-header">
            <md-icon-button onclick="toggleDrawer()">
                <span class="material-symbols-outlined">menu</span>
            </md-icon-button>
        </div>

        <nav class="drawer-content">
            <a href="@Url.Action("Index", "Home")" 
               class="nav-item @(currentController == "Home" && currentAction == "Index" ? "active" : "")">
                <span class="material-symbols-outlined">home</span>
                <span class="nav-label">Home</span>
            </a>
            <a href="@Url.Action("About", "Home")" 
               class="nav-item @(currentController == "Home" && currentAction == "About" ? "active" : "")">
                <span class="material-symbols-outlined">info</span>
                <span class="nav-label">About</span>
            </a>
            <a href="@Url.Action("Help", "Home")" 
               class="nav-item @(currentController == "Home" && currentAction == "Help" ? "active" : "")">
                <span class="material-symbols-outlined">help</span>
                <span class="nav-label">Help</span>
            </a>
            <a href="@Url.Action("Communication", "Home")" 
               class="nav-item @(currentController == "Home" && currentAction == "Communication" ? "active" : "")">
                <span class="material-symbols-outlined">forum</span>
                <span class="nav-label">Communication</span>
            </a>
            
            @if (!isLoggedIn)
            {
                <a href="@Url.Action("Login", "Account")" 
                   class="nav-item @(currentController == "Account" && currentAction == "Login" ? "active" : "")">
                    <span class="material-symbols-outlined">login</span>
                    <span class="nav-label">Login</span>
                </a>
            }
        </nav>

        <div class="drawer-footer">
            @if (isLoggedIn)
            {
                <!-- User Profile Section - CHỈ AVATAR -->
                <div class="user-profile-section">
                    <!-- User Menu Dropdown -->
                    <div id="userMenu" class="user-menu" style="display: none;">
                        <div class="menu-header">
                            <span class="menu-user-name">@userFullName</span>
                            <span class="menu-user-email">@Context.Session.GetString("UserEmail")</span>
                        </div>
                        <hr class="menu-divider" />
                        <a href="@Url.Action("Profile", "Manage")" class="menu-item">
                            <span class="material-symbols-outlined">person</span>
                            <span>Profile</span>
                        </a>
                        <a href="@Url.Action("Index", "Survey")" class="menu-item">
                            <span class="material-symbols-outlined">settings</span>
                            <span>My Surveys</span>
                        </a>
                        <hr class="menu-divider" />
                        <form asp-action="Logout" asp-controller="Account" method="post" style="margin: 0;">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="menu-item logout-btn">
                                <span class="material-symbols-outlined">logout</span>
                                <span>Logout</span>
                            </button>
                        </form>
                    </div>
                    
                    <div class="user-profile" onclick="toggleUserMenu(event)">
                        <div class="user-avatar">
                            @if (!string.IsNullOrEmpty(userAvatar))
                            {
                                <img src="@userAvatar" alt="@userFullName" />
                            }
                            else
                            {
                                <span class="avatar-initials">@userInitials</span>
                            }
                        </div>
                    </div>
                </div>
            }
            
            <!-- Theme Toggle Button -->
            <md-icon-button onclick="toggleTheme()">
                <span class="material-symbols-outlined">dark_mode</span>
            </md-icon-button>
        </div>
    </aside>

    <div class="main-content">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="toast toast-success">
                <span class="material-symbols-outlined">check_circle</span>
                <span>@TempData["SuccessMessage"]</span>
            </div>
        }
        @if (TempData["InfoMessage"] != null)
        {
            <div class="toast toast-info">
                <span class="material-symbols-outlined">info</span>
                <span>@TempData["InfoMessage"]</span>
            </div>
        }

        <main role="main" class="content-area">
            @RenderBody()
        </main>

        <footer class="footer">
            <div class="container">
                <span class="md-typescale-body-small">&copy; 2025 - Survey</span>
            </div>
        </footer>
    </div>

    <!-- Load jQuery BEFORE site.js and validation scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

@functions {
    string GetUserInitials(string fullName)
    {
        if (string.IsNullOrEmpty(fullName)) return "U";
        
        var parts = fullName.Trim().Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length == 1)
        {
            return parts[0].Substring(0, Math.Min(2, parts[0].Length)).ToUpper();
        }
        
        return (parts[0][0].ToString() + parts[^1][0].ToString()).ToUpper();
    }
}
